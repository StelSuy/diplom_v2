# Backend Configuration
# Скопируй этот файл в .env и настрой под свои нужды

# ====================================
# Application Settings
# ====================================
APP_NAME=TimeTracker API
ENV=dev
DEBUG=true

# ====================================
# Database Configuration
# ====================================
# MySQL/MariaDB (рекомендуется)
DATABASE_URL=mysql+pymysql://root:password@localhost:3306/timetracker

# SQLite (для разработки)
# DATABASE_URL=sqlite:///./timetracker.db

# PostgreSQL (альтернатива)
# DATABASE_URL=postgresql://user:password@localhost:5432/timetracker

# Database Pool Settings (опционально)
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_RECYCLE=1800
SQL_ECHO=0

# ====================================
# Security Settings
# ====================================
# ВАЖНО: Сгенерируй уникальный секрет для production!
# Можно использовать: openssl rand -hex 32
JWT_SECRET=change-me-to-random-string-min-32-chars
JWT_ALG=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Admin credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# ====================================
# Terminal Settings
# ====================================
# Минимальное время между сканами одного сотрудника (в секундах)
TERMINAL_SCAN_COOLDOWN_SECONDS=5

# ====================================
# CORS Settings
# ====================================
# В production замени на конкретные домены
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# ====================================
# Logging
# ====================================
LOG_LEVEL=INFO
# Уровни: DEBUG, INFO, WARNING, ERROR, CRITICAL

# ====================================
# Optional Features
# ====================================
# Enable PDF export
ENABLE_PDF_EXPORT=true

# Enable secure terminal authentication
ENABLE_SECURE_AUTH=true
