# ===========================================
# TimeTracker API - Environment Configuration
# ===========================================
# Copy this file to .env and configure for your environment

# -------------------------------------------
# Application Settings
# -------------------------------------------
APP_NAME=TimeTracker API
ENV=development
DEBUG=true

# -------------------------------------------
# Database Configuration (MySQL/MariaDB)
# -------------------------------------------
DATABASE_URL=mysql+pymysql://root:password@localhost:3306/timetracker

# Connection Pool Settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_RECYCLE=1800
SQL_ECHO=false

# -------------------------------------------
# Security Settings
# -------------------------------------------
# IMPORTANT: Generate unique secret for production!
# Use: openssl rand -hex 32
JWT_SECRET=your-secret-key-min-32-chars-change-in-production
JWT_ALG=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# -------------------------------------------
# Admin Credentials
# -------------------------------------------
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-this-password

# -------------------------------------------
# Terminal Settings
# -------------------------------------------
# Minimum seconds between scans for same employee
TERMINAL_SCAN_COOLDOWN_SECONDS=5

# -------------------------------------------
# CORS Settings
# -------------------------------------------
# Use specific domains in production
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# -------------------------------------------
# Logging
# -------------------------------------------
LOG_LEVEL=INFO
# Levels: DEBUG, INFO, WARNING, ERROR, CRITICAL
